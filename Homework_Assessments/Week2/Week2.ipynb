import numpy as np
import cv2
import matplotlib.pyplot as plt

H, W = 1000, 1000
r = 250
img = np.ones((H, W), np.uint8) * 255

cy, cx = H // 2, W // 2

ro = r
ri = r // 2

Y, X = np.ogrid[:H, :W]

d2_top = (Y - (cy - r))**2 + (X - cx)**2
top_ring = (d2_top <= ro*ro) & (d2_top >= ri*ri) & (Y <= (cy - r))

d2_bot = (Y - (cy + r))**2 + (X - cx)**2
bot_ring = (d2_bot <= ro*ro) & (d2_bot >= ri*ri) & (Y >= (cy + r))

img[top_ring | bot_ring] = 0

plt.imshow(img,cmap = "gray")

n = 1000
for y in range(n):
    for x in range(n):
        dist = max(abs(x - cx), abs(y - cy))
        if r/2 <= dist <= r:
            img[y, x] = 0

plt.imshow(img, cmap='gray', vmin=0, vmax=255)

Y, X = np.ogrid[:H, :W]
dx_right = X - (cx + r)
mask_right = (dx_right >= 0) & (dx_right <= r) & (np.abs(Y - cy) <= (r - dx_right))

dx_left = (cx - r) - X
mask_left = (dx_left >= 0) & (dx_left <= r) & (np.abs(Y - cy) <= (r - dx_left))

img[mask_right | mask_left] = 0
plt.imshow(img, cmap='gray', vmin=0, vmax=255)
cv2.imwrite("img.jpeg", img)